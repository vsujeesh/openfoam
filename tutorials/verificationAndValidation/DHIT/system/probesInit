probesInit
{
    type            probes;
    libs            (sampling);
    timeStart       $/timeStart;
    writeControl    writeTime;
    fixedLocations  true;
    interpolationScheme cellPoint;

    fields ( p U );

    probeLocations
    (
        // Initialization
        (1.4224 7.62e-2 0)
        (2.8448 7.62e-2 0)
        (6.5532 7.62e-2 0)
    );
}


